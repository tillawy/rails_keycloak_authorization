
<button hx-post="/clicked" hx-swap="outerHTML" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
  Click Me
</button>

<h1 class="text-3xl font-bold underline text-clifford">Routes</h1>

<% Rails.application.routes.named_routes.names.each do |name| %>
  <% route = Rails.application.routes.named_routes.get(name) %>
  <div class="p-2 bg-gray-100 border border-gray-200">
    <%= route.verb %>
    <%= name %>
    <%= route.path.spec.to_s %>
    <%= route.defaults[:controller] %>
    <%= route.defaults[:action] %>
  </div>
<% end %>