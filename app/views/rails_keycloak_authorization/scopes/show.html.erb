<div id="scope">
  <% if @resource_scope %>
    Resource Attached Scope: <%= @resource_scope.name %>
  <% elsif @available_scope %>
    Available Scope to attach: <%= @available_scope.name %>

    <button hx-post="<%= attach_scope_path(@keycloak_scope_name) %>"
            hx-target="#scope"
            hx-vals='{
              "keycloak_scope_name": "<%= @keycloak_scope_name %>",
              "keycloak_resource_id": "<%= @keycloak_resource_id %>"
            }'
    >
      Attach?
    </button>

  <% else %>
    No scope created yet,
    <button hx-post="<%= scopes_path %>"
            hx-target="#scope"
            hx-vals='{
              "keycloak_scope_name": "<%= @keycloak_scope_name %>",
              "keycloak_resource_id": "<%= @keycloak_resource_id %>"
            }'
    >Create?</button>
  <% end %>
</div>
